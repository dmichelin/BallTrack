<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Slider?>
<GridPane
          xmlns:fx="http://javafx.com/fxml" fx:id="pane" alignment="center">
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="0">
        <Text text="Number of Nodes"/>
        <Slider fx:id="numberOfNodes" />
        <TextField fx:id="MinimumSpeed" text="1000" />
        <TextField fx:id="MaximumSpeed" text="2000"/>
    </HBox>

    <Button fx:id="startButton" text="Start" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button fx:id="stopButton" text="Stop" GridPane.columnIndex="2" GridPane.rowIndex="1" disable="true"/>

</GridPane>